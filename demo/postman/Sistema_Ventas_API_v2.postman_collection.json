{
    "info": {
        "name": "Sistema de Ventas API",
        "description": "API REST del Sistema de Ventas con autenticación JWT",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "1.0.0"
    },
    "item": [
        {
            "name": "Auth",
            "description": "Endpoints de autenticación",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "login"]
                        }
                    },
                    "response": [],
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var jsonData = JSON.parse(responseBody);",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Productos",
            "description": "Gestión de productos",
            "item": [
                {
                    "name": "Listar Productos",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/productos",
                            "host": ["{{base_url}}"],
                            "path": ["productos"]
                        }
                    }
                },
                {
                    "name": "Crear Producto",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"nombre\": \"Producto Ejemplo\",\n    \"descripcion\": \"Descripción del producto\",\n    \"precio\": 100.00,\n    \"stock\": 50\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos",
                            "host": ["{{base_url}}"],
                            "path": ["productos"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Ventas",
            "description": "Gestión de ventas",
            "item": [
                {
                    "name": "Crear Venta",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clienteId\": 1,\n    \"items\": [\n        {\n            \"productoId\": 1,\n            \"cantidad\": 2\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ventas",
                            "host": ["{{base_url}}"],
                            "path": ["ventas"]
                        }
                    }
                },
                {
                    "name": "Listar Ventas",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/ventas",
                            "host": ["{{base_url}}"],
                            "path": ["ventas"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Clientes",
            "description": "Gestión de clientes",
            "item": [
                {
                    "name": "Listar Clientes",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/clientes",
                            "host": ["{{base_url}}"],
                            "path": ["clientes"]
                        }
                    }
                },
                {
                    "name": "Crear Cliente",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"nombre\": \"Cliente Ejemplo\",\n    \"email\": \"cliente@ejemplo.com\",\n    \"telefono\": \"123456789\",\n    \"direccion\": \"Dirección Ejemplo\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/clientes",
                            "host": ["{{base_url}}"],
                            "path": ["clientes"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ]
}
