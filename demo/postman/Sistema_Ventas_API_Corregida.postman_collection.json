{
    "info": {
        "name": "Sistema Ventas API (Corregida)",
        "description": "API REST del Sistema de Ventas con autenticación JWT - Versión corregida",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "1.1.0"
    },
    "item": [
        {
            "name": "Auth",
            "description": "Endpoints de autenticación - Corregidos los valores de roles",
            "item": [
                {
                    "name": "Register Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Admin User\",\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\",\n    \"rol\": \"admin\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        },
                        "description": "Registra un usuario administrador"
                    }
                },
                {
                    "name": "Register Vendedor",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Vendedor User\",\n    \"email\": \"vendedor@example.com\",\n    \"password\": \"vendedor123\",\n    \"rol\": \"vendedor\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        },
                        "description": "Registra un usuario vendedor"
                    }
                },
                {
                    "name": "Register Cajero",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Cajero User\",\n    \"email\": \"cajero@example.com\",\n    \"password\": \"cajero123\",\n    \"rol\": \"cajero\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        },
                        "description": "Registra un usuario cajero"
                    }
                },
                {
                    "name": "Authenticate",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = JSON.parse(responseBody);",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/authenticate",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "authenticate"]
                        },
                        "description": "Autentica un usuario y devuelve un token JWT"
                    }
                }
            ]
        },
        {
            "name": "Productos",
            "description": "Gestión de productos",
            "item": [
                {
                    "name": "Listar Productos",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/productos",
                            "host": ["{{base_url}}"],
                            "path": ["productos"]
                        },
                        "description": "Obtiene la lista de todos los productos"
                    }
                },
                {
                    "name": "Crear Producto",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"nombre\": \"Producto Test\",\n    \"descripcion\": \"Descripción del producto\",\n    \"precio\": 100.00,\n    \"stock\": 50,\n    \"activo\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos",
                            "host": ["{{base_url}}"],
                            "path": ["productos"]
                        },
                        "description": "Crea un nuevo producto"
                    }
                }
            ]
        },
        {
            "name": "Ventas",
            "description": "Gestión de ventas",
            "item": [
                {
                    "name": "Crear Venta",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clienteId\": 1,\n    \"items\": [\n        {\n            \"productoId\": 1,\n            \"cantidad\": 2\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ventas",
                            "host": ["{{base_url}}"],
                            "path": ["ventas"]
                        },
                        "description": "Registra una nueva venta"
                    }
                },
                {
                    "name": "Listar Ventas",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/ventas",
                            "host": ["{{base_url}}"],
                            "path": ["ventas"]
                        },
                        "description": "Obtiene la lista de todas las ventas"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}
