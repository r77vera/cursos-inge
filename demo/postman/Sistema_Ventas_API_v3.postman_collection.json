{
    "info": {
        "name": "Sistema Ventas API v3",
        "description": "API REST del Sistema de Ventas con autenticación JWT",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "3.0.0"
    },
    "item": [
        {
            "name": "Auth",
            "description": "Endpoints de autenticación",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Admin User\",\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\",\n    \"role\": \"ADMIN\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        }
                    }
                },
                {
                    "name": "Authenticate",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = JSON.parse(responseBody);",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/authenticate",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "authenticate"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Productos",
            "item": [
                {
                    "name": "Listar Productos",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/productos",
                            "host": ["{{base_url}}"],
                            "path": ["productos"]
                        }
                    }
                },
                {
                    "name": "Obtener Producto",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/productos/1",
                            "host": ["{{base_url}}"],
                            "path": ["productos", "1"]
                        }
                    }
                },
                {
                    "name": "Crear Producto",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"nombre\": \"Producto Nuevo\",\n    \"descripcion\": \"Descripción del producto\",\n    \"precio\": 100.00,\n    \"stock\": 50\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos",
                            "host": ["{{base_url}}"],
                            "path": ["productos"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Ventas",
            "item": [
                {
                    "name": "Listar Ventas",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/ventas",
                            "host": ["{{base_url}}"],
                            "path": ["ventas"]
                        }
                    }
                },
                {
                    "name": "Crear Venta",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clienteId\": 1,\n    \"items\": [\n        {\n            \"productoId\": 1,\n            \"cantidad\": 2\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ventas",
                            "host": ["{{base_url}}"],
                            "path": ["ventas"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [""]
            }
        }
    ]
}
